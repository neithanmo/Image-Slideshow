precision highp float;
uniform sampler2D tex0;
uniform float time;
//varying vec2 texcoord0;
	 
void main()
{
        //Getting the coordinates of the current pixel in texture
        vec2 pos;
        pos.x = gl_FragCoord.x;
        pos.y = gl_FragCoord.y;
        float displacementHeight = 0.1;

        //Changing pos by sinewave

        float displacementY = sin(time + (pos.x / 350.0)) * displacementHeight;

        //Getting pixel color from texture tex0 in position pos

        vec2 modifiedPosition = pos;
        modifiedPosition.y += displacementY;
        vec4 color = normalize(texture2D(tex0, modifiedPosition));

        //Output of shader
        gl_FragColor = color;
        //gl_FragColor = texture2D(tex0,texcoord0);
}
